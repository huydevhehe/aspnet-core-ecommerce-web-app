@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="col-md-6">
        <div class="card shadow p-4 text-center">
            <h2>@ViewData["Title"]</h2>
            <hr />
            @if (User.Identity?.IsAuthenticated ?? false)
            {
                <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                    <button type="submit" class="btn btn-danger w-100">Click here to Logout</button>
                </form>
            }
            else
            {
                <p class="text-success">You have successfully logged out of the application.</p>
            }
        </div>
    </div>
</div>

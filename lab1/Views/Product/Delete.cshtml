@model lab1.Models.Product

<div class="container mt-5">
    <div class="card text-center">
        <div class="card-header bg-danger text-white">
            <h2>Xác nhận xóa sản phẩm</h2>
        </div>
        <div class="card-body">
            @if (Model == null)
            {
                <div class="alert alert-danger" role="alert">
                    Sản phẩm không tồn tại.
                </div>
            }
            else
            {
                <p class="card-text">Bạn có chắc chắn muốn xóa sản phẩm <strong>@Model.Name</strong>?</p>

                 <i class="fas fa-heart" id="heartIcon" style="font-size: 2rem; color: grey;"></i>

                <form asp-action="Delete" method="post" class="mt-3">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-center">
                        <button type="submit" class="btn btn-danger me-2">Xóa</button>
                        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
                    </div>
                </form>
            }
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>



@model lab1.Models.Product

<div class="container mt-5">
    @if (Model == null)
    {
        <div class="alert alert-danger text-center" role="alert">
            <h2>Sản phẩm không tồn tại</h2>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-header">
                <h2 class="card-title">@Model.Name</h2>
            </div>
            <div class="card-body">

                <h3 class="card-subtitle mb-2 text-muted">Giá: @Model.Price.ToString("C")</h3>
                <p class="card-text">@Model.Description</p>
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" alt="Hình ảnh sản phẩm" class="img-fluid rounded mb-3" style="max-width: 300px;" />
                    <h4 class="card-subtitle mb-2 text-muted">Danh mục: @Model.Category?.Name</h4>
                }
                else
                {
                    <p class="text-muted">Không có hình ảnh</p>
                }
            </div>
            <div class="card-footer text-end">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Quay lại danh sách</a>
            </div>
        </div>
    }
</div>

@using lab1.Models
@model IEnumerable<lab1.Models.Product>

@{
    ViewData["Title"] = "Danh sách sản phẩm";
}

<div class="container mt-5">
    <h2 class="text-center mb-4" style="color: #2c3e50;">Danh sách sản phẩm</h2>
    <div class="d-flex justify-content-end mb-3">
        <a asp-action="Add" class="btn btn-success">Thêm sản phẩm mới</a>
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Hình ảnh</th>
                    <th>Tên sản phẩm</th>
                    <th>Giá</th>
                    <th>Mô tả</th>
                    <th>Danh mục</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>
                                @if (!string.IsNullOrEmpty(product.ImageUrl))
                                {
                                    <img src="@product.ImageUrl" alt="@product.Name" class="img-thumbnail" style="width: 50px; height: 50px; object-fit: cover;" />
                                }
                                else
                                {
                                    <span class="text-muted">Không có hình ảnh</span>
                                }
                            </td>
                            <td>@product.Name</td>
                            <td>@product.Price.ToString("C")</td>
                            <td>@(string.IsNullOrEmpty(product.Description) ? "Chưa có mô tả" : product.Description)</td>
                            <td>@(product.Category != null ? product.Category.Name : "Chưa có danh mục")</td>
                            <td>
                                <a asp-action="Display" asp-route-id="@product.Id" class="btn btn-info btn-sm me-1">Xem</a>
                                <a asp-action="Update" asp-route-id="@product.Id" class="btn btn-warning btn-sm me-1">Sửa</a>
                                <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger btn-sm"
                                   onclick="return confirm('Bạn có chắc chắn muốn xóa sản phẩm này?');">
                                    Xóa
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted">Không có sản phẩm nào để hiển thị.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@model List<Order>

<h2>Đơn hàng của bạn</h2>
<table class="table">
    <thead>
        <tr>
            <th>Ngày đặt</th>
            <th>Tổng tiền</th>
            <th>Trạng thái</th>
            <th>Chi tiết</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderDate</td>
                <td>@order.TotalPrice.ToString("C")</td>
                <td>@order.Status</td>
                <td>
                    <a href="@Url.Action("OrderDetails", "Order", new { id = order.Id })" class="btn btn-custom-view">Xem</a>
                </td>

            </tr>
        }

    </tbody>
</table>

@using lab1.Models
@model IEnumerable<lab1.Models.Product>

@{
    ViewData["Title"] = "Danh sách sản phẩm";
    var searchQuery = ViewBag.SearchQuery as string;
}

<div class="container mt-5">
    <!-- Banner lớn trên trang chủ -->
    <div id="bannerCarousel" class="carousel slide mb-4" data-bs-ride="carousel" data-bs-interval="2500">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="/images/1.jpg" class="d-block w-100" alt="Banner 1">
            </div>
            <div class="carousel-item">
                <img src="/images/2.jpg" class="d-block w-100" alt="Banner 2">
            </div>
            <div class="carousel-item">
                <img src="/images/3.jpg" class="d-block w-100" alt="Banner 3">
            </div>
            <div class="carousel-item">
                <img src="/images/4.jpg" class="d-block w-100" alt="Banner 4">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#bannerCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#bannerCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
        </button>
    </div>


    <h2 class="text-center mb-4" style="color: #0d6efd;">Danh sách sản phẩm</h2>

    <!-- Form tìm kiếm sản phẩm -->
    <form method="get" asp-controller="Product" asp-action="Index">
        <div class="row mb-3">
            <!-- Ô tìm kiếm sản phẩm -->
            <div class="col-md-6 offset-md-3">
                <label class="form-label">Tìm kiếm sản phẩm</label>
                <div class="input-group">
                    <input type="text" name="searchQuery" class="form-control" placeholder="Nhập tên sản phẩm..." value="@searchQuery">
                    <button type="submit" class="btn btn-primary">Tìm</button>
                </div>
            </div>
        </div>
    </form>

    <div class="col-12">
        <div class="row row-cols-1 row-cols-md-3 row-cols-lg-5 g-4 mt-3">
            @if (Model?.Any() == true)
            {
                foreach (var product in Model)
                {
                    <div class="col">
                        <div class="card h-100 shadow-sm">
                            <div class="card-img-top position-relative">
                                @if (!string.IsNullOrEmpty(product.ImageUrl))
                                {
                                    <img src="@product.ImageUrl" alt="@product.Name" class="img-fluid" style="height: 200px; object-fit: cover;" />
                                }
                                else
                                {
                                    <div class="text-center text-muted p-5" style="height: 200px; line-height: 200px;">
                                        Không có hình ảnh
                                    </div>
                                }
                            </div>
                            <div class="card-body">
                                <h5 class="card-title text-truncate">@product.Name</h5>
                                <p class="card-text text-muted small">Danh mục: @product.Category?.Name</p>

                                @if (!string.IsNullOrEmpty(product.Description))
                                {
                                    <p class="card-text text-muted small">
                                        @(product.Description.Length > 50 ? product.Description.Substring(0, 50) + "..." : product.Description)
                                    </p>
                                }
                                <div class="d-flex align-items-center mb-2">
                                    <span class="text-danger fw-bold">@product.Price.ToString("C", new System.Globalization.CultureInfo("vi-VN"))</span>
                                </div>
                                <div class="d-flex justify-content-between align-items-center small text-muted">
                                    <span>
                                        <i class="fas fa-star text-warning"></i> 10.0 (1000)
                                    </span>
                                    <span>Đã bán: 15K</span>
                                </div>
                            </div>
                            <div class="card-footer text-center border-0 bg-white">

                                <a asp-controller="Product" asp-action="Display" asp-route-id="@product.Id" class="btn btn-info btn-sm me-2">Xem</a>
                                <button class="btn btn-success btn-sm add-to-cart" data-id="@product.Id">
                                    <i class="fas fa-cart-plus"></i> Thêm
                                </button>

                                <form asp-controller="Cart" asp-action="BuyNow" method="post" style="display:inline;">
                                    <input type="hidden" name="id" value="@product.Id" />
                                    <button type="submit" class="btn btn-warning btn-sm">Mua ngay</button>
                                </form>


                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12 text-center text-muted"> 
                    <p>Không có sản phẩm nào phù hợp.</p>
                </div>
            }
        </div>
    </div>
</div>



@section Scripts {
    <script>
        $(document).ready(function () {
            $('.add-to-cart').click(function () {
                var productId = $(this).data('id');

                $.ajax({
                    url: '@Url.Action("AddToCart", "Cart")',
                    type: 'POST',
                    data: { id: productId },
                    headers: {
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function (response) {
                        if (response.success) {
                            alert(response.message);
                            // Cập nhật số lượng giỏ hàng trên giao diện (nếu cần)
                            // Ví dụ: $('#cart-count').text(response.cartCount);
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function (xhr, status, error) {
                        alert('Đã có lỗi xảy ra. Vui lòng thử lại! Chi tiết lỗi: ' + xhr.responseText);
                    }
                });
            });
        });
    </script>



    <script>
        function sendMessage() {
            var userMessage = document.getElementById("user-input").value;
            if (!userMessage) return;

            var chatContent = document.getElementById("chat-content");
            chatContent.innerHTML += `<div><b>Bạn:</b> ${userMessage}</div>`;

            fetch('/api/chat', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ message: userMessage })
            })
            .then(response => response.json())
            .then(data => {
                chatContent.innerHTML += `<div><b>AI:</b> ${data.response}</div>`;
            });
        }
    </script>

}
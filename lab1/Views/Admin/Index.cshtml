@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

<h2>Quản lý tài khoản</h2>
<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>Trạng thái</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>
                    @if (user.LockoutEnd == null || user.LockoutEnd <= DateTime.Now)
                    {
                        <span class="text-success">Hoạt động</span>
                    }
                    else
                    {
                        <span class="text-danger">Bị chặn</span>
                    }
                </td>
                <td>
                    <a asp-action="ToggleLock" asp-route-id="@user.Id" class="btn btn-warning">
                        @(user.LockoutEnd == null || user.LockoutEnd <= DateTime.Now ? "Chặn" : "Mở khóa")
                    </a>
                    <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
